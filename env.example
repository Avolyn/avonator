# FastAPI Guardrails Service Environment Configuration

# API Configuration
GUARDRAILS_API_KEY=your-secure-api-key-change-in-production
DEBUG=False
HOST=0.0.0.0
PORT=8000
WORKERS=1

# CORS Configuration
ENABLE_CORS=True
ALLOWED_ORIGINS=*
ALLOWED_HOSTS=*

# Text Processing
MAX_TEXT_LENGTH=10000
DEFAULT_GUARDRAIL=default

# NLP Model Configuration
SPACY_MODEL=en_core_web_sm
STANZA_MODEL=en
HUGGINGFACE_MODEL=unitary/toxic-bert

# Model Loading
LOAD_MODELS_ON_STARTUP=True
MODEL_CACHE_DIR=./models

# Validation Configuration
MAX_VALIDATION_TIME=30.0

# Logging
LOG_LEVEL=INFO
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Rate Limiting (optional)
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
